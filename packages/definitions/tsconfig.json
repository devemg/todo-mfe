{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es2017",
      "esnext"
    ],
      "types": [
        "node"
      ]
  },
  "include": ["src", "types", "index.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
